        <meta-data
            android:name="com.google.android.nearby.messages.API_KEY"
            android:value="AIzaSyBLgVIOraylYacXopAlHZRknWJLeOEjcb4" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
